<h1>Reset your password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>

<%= render "shared/form_errors", form: form %>
  <div class="mb-3">
    <%= form.password_field :password, class: "form-control", autocomplete: "false", placeholder: "Password" %>
  </div>
  <div class="mb-3">
    <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "false", placeholder: "Password Confirmation" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Reset password", class: "btn btn-primary" %>
  </div>
<% end %>