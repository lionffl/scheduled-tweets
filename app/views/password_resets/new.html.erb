<%= form_with url: password_reset_path do |form| %>
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <h2 class="fw-bold mb-2 text-uppercase">Forgot your password?</h2>
                <p class="text-white-50 mb-5">Enter your email and we will send you instructions</p>
                <div class="form-outline form-white mb-4">
                  <%= form.text_field :email, class: "form-control form-control-lg", autocomplete: "false", placeholder: "Email" %>
                </div>
                <%= form.submit "Reset password", class: "btn btn-outline-light btn-md px-3 mt-5" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
