<%= form_with model: Current.user, url: edit_password_path do |form| %>
  <%= render "shared/form_errors", form: form %>
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <h2 class="fw-bold mb-2 text-uppercase">Change password</h2>
                <p class="text-white-50 mb-5">Set your new password below</p>
                <div class="form-outline form-white mb-4">
                  <%= form.password_field :password, class: "form-control form-control-lg", autocomplete: "false", placeholder: "New password" %>
                </div>
                <div class="form-outline form-white mb-4">
                  <%= form.password_field :password_confirmation, class: "form-control form-control-lg", autocomplete: "false", placeholder: "New password Confirmation" %>
                </div>
                <%= form.submit "Update password", class: "btn btn-outline-light btn-lg mt-5 px-3" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
