<h1>Sign up</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>
<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <% @user.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
<% end %>

  <div class="mb-3">
    <%= form.text_field :email, class: "form-control", autocomplete: "false", placeholder: "Email" %>
  </div>
  <div class="mb-3">
    <%= form.password_field :password, class: "form-control", autocomplete: "false", placeholder: "Password" %>
  </div>
  <div class="mb-3">
    <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "false", placeholder: "Password Confirmation" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>