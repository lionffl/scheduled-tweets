<%= form_with url: sign_in_path do |form| %>
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                <p class="text-white-50 mb-5">Login to schedule tweets</p>
                <div class="form-outline form-white mb-4">
                  <%= form.text_field :email, class: "form-control form-control-lg", autocomplete: "false", placeholder: "Email" %>
                </div>
                <div class="form-outline form-white mb-4">
                  <%= form.password_field :password, class: "form-control form-control-lg", autocomplete: "false", placeholder: "Password" %>
                </div>
                <p class="small mb-5 pb-lg-2"><%= link_to "Forgot your password?", password_reset_path, class: "text-white-50" %></p>
                <%= form.submit "Sign in", class: "btn btn-outline-light btn-lg px-5" %>
              </div>
              <div>
                <p class="mb-0">Don't have an account? <%= link_to 'Sign Up', sign_up_path, method: :post, class: "text-white-50 fw-bold" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>
