<div class="mb-3 card card-body" style="color: black;">
  <%= tweet.body %>
  <div class="me-4">
    <%= image_tag tweet.twitter_account.image, class: "rounded-circle mt-2" %>
    <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}", target: :_blank %>
  
  <% if tweet.published? %>
    <%= link_to "View tweet", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :blank %>
  <% else %>
    Scheduled to be published at <%= l tweet.publish_at, format: :long %> 
    <div class="d-flex m-2">
    <%= link_to "Edit Tweet", edit_tweet_path(tweet), class: "btn btn-outline-secondary me-2" %>
    <%= button_to "Delete", tweet, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-outline-danger" %>
    </div>
  <% end %>
  </div>
</div>